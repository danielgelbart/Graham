- num = 1
%table.stock-list
  %thead
    %th
      number
    %th
      ticker
    %th
      Market Cap
    %th
      Price
    %th
      Price/Limit
    %th
      Price/Book
    %th
      10 year eps
  %tbody
    - @stocks.each do |stock|
      %tr
        %td
          = num
          - num = num + 1
        %td
          = link_to "#{stock.ticker}", stock_path(stock)
        %td
          = stock.market_cap
        %td
          = stock.price
        %td
          = short_float(stock.price.to_f / stock.price_limit.to_f)
        %td
          = short_float(stock.price.to_f / stock.bv_per_share.to_f)
        %td
          - a = stock.ten_year_eps
          = short_float(a)
