%h1
  =h @stock.name
%h2
  Ticker:
  =h @stock.ticker
  = link_to "on_google",
  "http://www.google.com/finance?q=#{@stock.ticker}"
- if @stock.has_multiple_share_classes?
  = "Has multiple stock classes: #{@stock.share_classes.map{ |sc| sc.ticker } }"
%div.container
  %div.row
    %div.col-md-2
      Market cap: 
    %div.bold.col-md-2
      = is_to_s @stock.market_cap
  - if @stock.has_multiple_share_classes?
    %div.row
      %div.col-md-2
        Publicly traded cap: 
      %div.bold.col-md-2
        = is_to_s @stock.public_market_cap
  %div.row
    %div.col-md-2
      last price
    %div.bold.col-md-1
      = "$#{@stock.price}"
    %div.col-md-1
      = button_to("Update price", {:price => @stock.update_price }, :method => :put )


- if !@ttm.nil?
  .red
    Showing TTM data in last column of chart   
- else
  .red
    TTM is latest annual record
- if !@notes.empty?
  .blue
    Stock has notes (displayed at bottom)
= render "stocks/earnings_chart"
%div.container
  %div.row
    %div.col-md-5
      = render 'stocks/mydata'
    %div.col-md-5.col-md-offset-1
      = render "stocks/graham_data"
= render 'stocks/equity_chart'
= render 'stocks/be_table'
- if !@notes.empty?
  %table.stock-list
    %thead
      %th
        year
      %th
        pertains to
      %th
        note  
    %tbody
      - @notes.sort{ |a,b| b.year <=> a.year }.each do |n|
        %tr
          %td
            = n.year
          %td
            = n.pertains_to 
          %td
            = n.note

= link_to 'Back', stocks_path
