- num = 1
%table.stock-list
  %thead
    %th
      number
    %th
      ticker
    %th
      Market Cap
    %th
      Dividend(year)
    %th
      Price/Limit
    %th
      1 year P/E
    %th
      3 year P/E
    %th
      10 year P/E
  %tbody
    - @stocks.each do |stock|
      %tr
        %td
          = num
          - num = num + 1
        %td
          = link_to "#{stock.ticker}", stock_path(stock)
          = link_to "Dividends", stock.dividend_url
        %td
          = stock.market_cap
        %td
          = stock.ttm_div
        %td
          = short_float( stock.price.to_f / stock.price_limit.to_f)
        %td
          = short_float( stock.price / stock.ttm_eps)
        %td
          = short_float( stock.price / stock.historic_eps(3))
        %td
          = short_float( stock.price / stock.ten_year_eps )
